doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title Test
    link(href='https://fonts.googleapis.com/css?family=Open+Sans:400,700', rel='stylesheet', type='text/css')
    link(rel="stylesheet", href="css/style.css")
    
  body
    
    //---------------------//
    //--NAVIGATION         //
    //---------------------//
    header
      .menuBtn 
      nav.nav
        ul.nav__list
          li.nav__item: a.nav__link(href="#") Главная
          li.nav__item: a.nav__link(href="#shamShuiPo") Sham Shui Po
          li.nav__item: a.nav__link(href="#mongKok") Mong Kok
          li.nav__item: a.nav__link(href="#tsimShaTsui") Tsim Sha Tsui
          li.nav__item: a.nav__link(href="#central") Central
      
    
    
    //---------------------//
    //--1ST PAGE           //
    //---------------------//
          
    section.hello
      .title
        h1.title__text Гонконг<br>для<br>фотографов
      .subtitle
        h2.subtitle__text <span>Это путеводитель по стрит-фотографиям.</span> <span>Мы покажем места которые стоит посетить</span>
    
    
    
    //---------------------//
    //--2ND PAGE           //
    //---------------------//
    
    section.info
      .information
        p.information__text Для удобства мы разместили<br>путь по Гоконгской ветке метро
    
    
    
    //---------------------//
    //--CONTENT/MAP        //  
    //---------------------//
    
    section.main
    
      .shadowMap
      .line
        .line__inert
      
      
      
      //---------------------//
      //--STATION            //
      //---------------------//
      
      .dot.dot--shamShuiPo
        h2.dot__name Sham Shui Po
        a.dot__btn.dot__btn--shamShuiPo(href="#shamShuiPo")
        .dot__btn_target#shamShuiPo(name="shamShuiPo")
          
      .dot.dot--mongKok
        h2.dot__name Mong Kok
        a.dot__btn.dot__btn--mongKok(href="#mongKok")
        .dot__btn_target#mongKok(name="mongKok")
            
      .dot.dot--tsimShaTsui
        h2.dot__name Tsim Sha Tsui
        a.dot__btn.dot__btn--tsimShaTsui(href="#tsimShaTsui")
        .dot__btn_target#tsimShaTsui(name="tsimShaTsui")
            
      .dot.dot--central
        h2.dot__name Central
        a.dot__btn.dot__btn--central(href="#central")
        .dot__btn_target#central(name="central")
      
      
      
      //---------------------//
      //--PHOTO              //
      //---------------------//
              
      .dot.dot--p11
        a.dot__btn.dot__btn--photo.dot__btn--p11(href="#p11")
        .dot__btn_target#p11(name="p11")  
        
      .dot.dot--p12
        a.dot__btn.dot__btn--photo.dot__btn--p12(href="#p12")
        .dot__btn_target#p12(name="p12")  

      
      
      
      
      
      .radGrad
      
      
      
      //---------------------//
      //--GALLERY            //
      //---------------------//

      .popUp
        .gallery
          .gallery__content
            <iframe class="gallery__map" src="#" frameborder="0" allowfullscreen></iframe>
            .gallery__image
              img.gallery__image_photo(src="./img/1ShamShuiPo/main.jpg" alt="headerPhoto")
              h3.gallery__image_name
              
            p.gallery__description 
              
            .btn.btn--map НА КАРТУ
          .btn.btn--back НАЗАД
    
      
        .photo
          .photo__content
            img.photo__image_photo(src="./img/1ShamShuiPo/1.jpg", alt="photo")
            .btn.btn--back НАЗАД


    //---------------------//
    //--SCRIPT             //
    //---------------------//
    
    script(type="text/javascript", src="js/jquery-3.0.0.min.js")
    script(type="text/javascript", src="js/main.js")
